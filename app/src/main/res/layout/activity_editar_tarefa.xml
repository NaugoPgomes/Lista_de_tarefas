<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Relative_root"
    android:background="@drawable/background"
    android:padding="16dp"
    tools:context=".view.EditarTarefaActivity">


    <ImageView
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/lista_de_tarefas" />

    <EditText
        android:id="@+id/tarefa"
        style="@style/Edit_Text_Cadastro_Tarefas"
        android:inputType="text"
        android:layout_marginTop="220dp"
        android:textColorHint="@color/black"
        android:hint="Nome da Tarefa :" />

    <EditText
        android:id="@+id/hora"
        style="@style/Edit_Text_Cadastro_Tarefas"
        android:layout_below="@+id/tarefa"
        android:inputType="time"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/black"
        android:hint="Hora : "/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/data"
        style="@style/Button_Cadastro_Tarefas"
        android:layout_below="@+id/hora"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Clique para selecionar a Data"/>


    <CheckBox
        android:id="@+id/CheckBox_Finalizada"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/data"
        android:textColor="@color/black"
        android:text="@string/finalizada" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_save"
        style="@style/button"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Salvar"/>

</RelativeLayout>